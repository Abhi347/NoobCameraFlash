<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.noobcameraflash.MainActivity">

    <Button
        android:onClick="onPermissionsClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Permissions"/>
    <Button
        android:onClick="onFlashOnClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flash On"/>
    <Button
        android:onClick="onFlashOffClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Flash Off"/>
    <Button
        android:onClick="onFlashToggleClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toggle Flash"/>

    <Button
        android:onClick="onReleaseClick"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Release"/>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Current Flash Status: Off"/>
</LinearLayout>
